
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
<p>
  <% if comment.user_id == current_user.id %>
    <%= link_to 'Edit Comment', edit_comment_path(comment) %>
    <%= link_to 'Delete Comment', [comment.product, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  <% end %>

</p>
